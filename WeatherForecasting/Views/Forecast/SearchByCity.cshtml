@model WeatherForecasting.Models.SearchByCity

@{
    ViewData["Title"] = "SearchByCity";
}

<div class="container">

    <form method="post">

        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h1>Weather Report</h1>
                <h2>Please enter city name</h2>
                <label asp-for="City" style="font-family: Arial"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="Forecast" asp-action="SearchByCity" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

</div>