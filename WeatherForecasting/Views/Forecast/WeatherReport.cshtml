
@model WeatherForecasting.Models.WeatherReport

@{
    ViewData["Title"] = "WeatherReport";
}

<div class="container">

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <h2>Forecast for the selected city</h2>

            <label asp-for="City"></label>
            <span class="badge">@Model.City</span>
            <br />

            <label asp-for="Temprature"></label>
            <span class="badge">@Model.Temprature °C</span>
            <br />

            <label asp-for="Humidity"></label>
            <span class="badge">@Model.Humidity %</span>
            <br />

            <label asp-for="Pressure"></label>
            <span class="badge">@Model.Pressure Hpa</span>
            <br />

            <label asp-for="Wind"></label>
            <span class="badge">@Model.Wind Km/h</span>
            <br />

            <label asp-for="Weather"></label>
            <span class="badge">@Model.Weather</span>

        </div>

    </div>

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <form method="get">
                <button asp-controller="Forecast" asp-action="SearchByCity" class="btn btn-success">Home</button>
            </form>

        </div>

    </div>

</div>